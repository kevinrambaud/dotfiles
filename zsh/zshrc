# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh

# Theme
ZSH_THEME="spaceship"

# Plugins
plugins=(
  zsh-autosuggestions
)

# Autosuggestion keymap
bindkey '^ ' autosuggest-accept

source $ZSH/oh-my-zsh.sh

# Editor
export EDITOR=nvim

# Enable true color support for terminals
export NVIM_TUI_ENABLE_TRUE_COLOR=1

# Custom aliases
source ~/.aliases

# Custom functions
source ~/.functions

# nvm
export NVM_DIR="$HOME/.nvm"
. "/usr/local/opt/nvm/nvm.sh"

# Path
export PATH="$PATH:/usr/local/sbin:$GOPATH/bin:/usr/local/opt/coreutils/libexec/gnubin:/usr/local/opt/findutils/libexec/gnubin:$HOME/Library/Python/2.7/bin:$HOME/flutter/bin"

# Go path
export GOPATH=$HOME/go

# Setting fd as the default source for fzf
export FZF_DEFAULT_COMMAND='fd --exclude .git --hidden --type f'

# To apply the command to CTRL-T as well
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

 [ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
