# zsh
alias zshconfig="$EDITOR ~/.zshrc"
alias reload="source ~/.zshrc"

# God mode
alias _="sudo"

# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# List all files and directories
alias l="ls -la"
alias ll="ls -ls"
alias ld="ls -ld */"

# Git
alias g="git"
alias gitconfig="$EDITOR ~/.gitconfig"

# Remove
alias rr="rm -rf"

# npm
alias ni="npm install"
alias nis="npm install --save"
alias nisd="npm install --save-dev"
alias nig="npm install -g"
alias nu="npm uninstall"
alias nup="npm update"
alias nri="rm -rf node_modules && npm install"
alias nstart="npm start"
alias ntest="npm test"
alias ncov="npm run coverage"
alias nlint="npm run lint"

# Go
alias gobin="cd $GOPATH/bin/"
alias gopkg="cd $GOPATH/pkg/"
alias gosrc="cd $GOPATH/src/"
alias gome="cd $GOPATH/src/github.com/kevinrambaud/"

# AWS
alias awscred="$EDITOR $HOME/.aws/credentials"
alias awsconf="$EDITOR $HOME/.aws/config"

alias chmox='chmod -x'

alias cask='brew cask'

alias where=which

alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

alias hosts="sudo $EDITOR /etc/hosts"

alias brupdate="brew update && brew upgrade && brew cleanup"

alias vim="nvim"
